{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            // This will be used by C++ Extension for the play button
            "name": "C/C++: g++ build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cxxcode/bin/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb", // Only GDB works for VSCode C++ Extension
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "C/C++: g++ build active file"
        },
        {
            "name": "(gdb) Launch C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cxxcode/bin/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "TypeScript Current File",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register",
            ],
            "cwd": "${workspaceFolder}/tscode",
            "args": "${file}",
            "console": "integratedTerminal",
        }
    ]
}